    "import random\n",
    "\n",
    "print(\"JUEGO DE ADIVINANZAS (1-100)\")\n",
    "print(\"Intenta adivinar el número secreto.\")\n",
    "print(\"Reglas:\")\n",
    "print(\"1. Si escoges un número menor que 1 o mayor que 100: 'FUERA DE LÍMITES'\")\n",
    "print(\"2. En el primer intento: si estás a 10 del número → 'CALIENTE', si no → 'FRÍO'\")\n",
    "print(\"3. En los intentos siguientes: si te acercas → 'MÁS CALIENTE', si te alejas → 'MÁS FRÍO'\")\n",
    "print(\"4. Si aciertas, se muestra cuántos intentos llevas\\n\")\n",
    "\n",
    "# 1. Generar un número aleatorio entre 1 y 100\n",
    "numero_secreto = random.randint(1, 100)\n",
    "\n",
    "# 2. Lista para almacenar los intentos del jugador\n",
    "intentos = []\n",
    "\n",
    "# 3. Bucle principal del juego\n",
    "while True:\n",
    "    intento = input(\"Introduce un número del 1 al 100: \")\n",
    "\n",
    "    # Validar que el usuario introduce un número\n",
    "    if not intento.isdigit():\n",
    "        print(\"Error: Debes introducir un número.\")\n",
    "        continue\n",
    "\n",
    "    intento = int(intento)\n",
    "\n",
    "    # Regla 1: fuera de límites\n",
    "    if intento < 1 or intento > 100:\n",
    "        print(\"FUERA DE LÍMITES\")\n",
    "        continue\n",
    "\n",
    "    # Guardamos el intento\n",
    "    intentos.append(intento)\n",
    "\n",
    "    # Regla 4: si acierta\n",
    "    if intento == numero_secreto:\n",
    "        print(f\"Correcto. El número era {numero_secreto}.\")\n",
    "        print(f\"Has acertado en {len(intentos)} intentos.\")\n",
    "        break\n",
    "\n",
    "    # Primer intento → \"CALIENTE\" o \"FRÍO\"\n",
    "    if len(intentos) == 1:\n",
    "        if abs(numero_secreto - intento) <= 10:\n",
    "            print(\"CALIENTE\")\n",
    "        else:\n",
    "            print(\"FRÍO\")\n",
    "        continue\n",
    "\n",
    "    # Intentos siguientes: comparar cercanía\n",
    "    distancia_actual = abs(numero_secreto - intento)\n",
    "    distancia_anterior = abs(numero_secreto - intentos[-2])\n",
    "\n",
    "    if distancia_actual < distancia_anterior:\n",
    "        print(\"MÁS CALIENTE\")\n",
    "    else:\n",
    "        print(\"MÁS FRÍO\")\n"
   ]
  },
